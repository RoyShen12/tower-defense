{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": false,
    "browser": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "switch-colon-spacing":"error",
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-console": "off",
    "no-catch-shadow": "error",
    "no-const-assign": "error",
    "no-constant-condition": "error",
    "no-trailing-spaces": "error",
    "no-unused-vars": "off",
    "no-undef": "off",
    "no-class-assign":"off"
  }
}